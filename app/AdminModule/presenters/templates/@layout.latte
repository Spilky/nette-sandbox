<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{ifset title}{include title|striptags} | {/ifset}Administrace - SpilkyNetteSandbox</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="{$basePath}/bower-plugins/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="{$basePath}/bower-plugins/fontawesome/css/font-awesome.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="{$basePath}/bower-plugins/admin-lte/plugins/iCheck/square/blue.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="{$basePath}/bower-plugins/admin-lte/plugins/select2/select2.min.css">
    <!-- Bootstrap TimePicker -->
    <link rel="stylesheet" href="{$basePath}/bower-plugins/admin-lte/plugins/timepicker/bootstrap-timepicker.min.css">
    <!-- Bootstrap datetimepicker -->
    <link rel="stylesheet" href="{$basePath}/bower-plugins/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css">
    <!-- FullCalendar -->
    <link rel="stylesheet" href="{$basePath}/bower-plugins/fullcalendar/dist/fullcalendar.min.css">
    <link rel="stylesheet" href="{$basePath}/bower-plugins/fullcalendar-scheduler/dist/scheduler.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="{$basePath}/bower-plugins/admin-lte/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
       folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="{$basePath}/bower-plugins/admin-lte/dist/css/skins/_all-skins.min.css">
    <!-- Ublaboo Datagrid - Use this css for that pretty checkboxes (https://github.com/paveljanda/happy) -->
    <link rel="stylesheet" href="{$basePath}/bower-plugins/happy/dist/happy.css">
    <link rel="stylesheet" href="{$basePath}/bower-plugins/bootstrap-datepicker/dist/css/bootstrap-datepicker3.css">
    <link rel="stylesheet" href="{$basePath}/bower-plugins/ublaboo-datagrid/assets/dist/datagrid.css">
    <!-- Ublaboo Datagrid - Use this css for ajax spinners -->
    <link rel="stylesheet" href="{$basePath}/bower-plugins/ublaboo-datagrid/assets/dist/datagrid-spinners.css">
    <!-- Main -->
    <link rel="stylesheet" href="{$basePath}/css/base.css">
    <link rel="stylesheet" href="{$basePath}/css/admin.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- jQuery 2.1.4 -->
    <script src="{$basePath}/bower-plugins/jquery/dist/jquery.min.js"></script>
    <!-- Nette ajax -->
    <script src="{$basePath}/bower-plugins/nette.ajax.js/nette.ajax.js"></script>
    <!-- Nette forms -->
    <script src="{$basePath}/bower-plugins/nette-live-validation/src/netteForms.js"></script>
    <script src="{$basePath}/bower-plugins/nette-live-validation/src/live-form-validation.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="{$basePath}/bower-plugins/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="{$basePath}/bower-plugins/admin-lte/plugins/iCheck/icheck.min.js"></script>
    <!-- Select2 -->
    <script src="{$basePath}/bower-plugins/admin-lte/plugins/select2/select2.min.js"></script>
    <!-- Moment -->
    <script src="{$basePath}/bower-plugins/moment/min/moment.min.js"></script>
    <script src="{$basePath}/bower-plugins/moment/locale/cs.js"></script>
    <!-- Bootstrap TimePicker -->
    <script src="{$basePath}/bower-plugins/admin-lte/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <!-- Bootstrap datetimepicker -->
    <script src="{$basePath}/bower-plugins/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
    <!-- FullCalendar -->
    <script src="{$basePath}/bower-plugins/fullcalendar/dist/fullcalendar.min.js"></script>
    <script src="{$basePath}/bower-plugins/fullcalendar/dist/lang/cs.js"></script>
    <script src="{$basePath}/bower-plugins/fullcalendar-scheduler/dist/scheduler.min.js"></script>
    <!-- InputMask -->
    <script src="{$basePath}/bower-plugins/admin-lte/plugins/input-mask/jquery.inputmask.js"></script>
    <script src="{$basePath}/bower-plugins/admin-lte/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
    <!-- AdminLTE App -->
    <script src="{$basePath}/bower-plugins/admin-lte/dist/js/app.min.js"></script>
    <!-- Ublaboo Datagrid - Use this tiny js for that pretty checkboxes (https://github.com/paveljanda/happy) -->
    <script src="{$basePath}/bower-plugins/happy/dist/happy.js"></script>
    <script src="{$basePath}/bower-plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    <script src="{$basePath}/bower-plugins/jquery-ui-sortable/jquery-ui-sortable.js"></script>
    <script src="{$basePath}/bower-plugins/ublaboo-datagrid/assets/dist/datagrid.js"></script>
    <!-- Ublaboo Datagrid - Use this little extension for ajax spinners -->
    <script src="{$basePath}/bower-plugins/ublaboo-datagrid/assets/dist/datagrid-spinners.js"></script>
    <!-- Main -->
    <script src="{$basePath}/js/base.js"></script>
    <script src="{$basePath}/js/admin.js"></script>

    {block head}{/block}
</head>
<body class="hold-transition skin-blue sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">

    <header class="main-header">
        <!-- Logo -->
        <a n:href="Homepage:" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>A</b></span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><b>Administrace</b></span>
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>

            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <!-- User Account: style can be found in dropdown.less -->
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-user"></i>
                            <span class="hidden-xs">{$user->getIdentity()->name}</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a n:href="User:profile" class="btn btn-default btn-flat">Profil</a>
                                </div>
                                <div class="pull-right">
                                    <a n:href="Sign:out" class="btn btn-default btn-flat">Odhlásit</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- =============================================== -->

    <!-- Left side column. contains the sidebar -->
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu">
                <li n:if="$user->isAllowed('Admin:User')" n:class="$presenter->isLinkCurrent('User:*') && !$presenter->isLinkCurrent('User:profile') ? active, treeview">
                    <a href="#"><i class="fa fa-users"></i> <span>Uživatelé</span> <i class="fa fa-angle-left pull-right"></i></a>
                    <ul class="treeview-menu">
                        <li><a n:href="User:"><i class="fa fa-list"></i> <span>Výpis uživatelů</span></a></li>
                        <li><a n:href="User:add"><i class="fa fa-plus"></i> <span>Přidat uživatele</span></a></li>
                    </ul>
                </li>
            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>

    <!-- =============================================== -->

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            {block title}{/block}

            {block breadcrumb}{/block}
        </section>

        <!-- Main content -->
        <section class="content">

            <div n:foreach="$flashes as $flash" class="callout callout-{$flash->type}">
                {$flash->message}
            </div>

            {include content}

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <footer class="main-footer">
        <strong>Copyright &copy; {date('Y')} <a href="http://www.dspilka.cz" target="_blank">David Spilka</a>.</strong> All rights
        reserved.
    </footer>
</div>
<!-- ./wrapper -->
</body>
</html>